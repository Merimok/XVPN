{
  "log": {
    "level": "info"
  },
  "inbounds": [
    {
      "type": "tun",
      "interface_name": "XVPN",
      "inet4_address": "172.19.0.1/30",
      "mtu": 9000,
      "auto_route": true,
      "strict_route": false,
      "stack": "system"
    }
  ],
  "outbounds": [
    {
      "type": "vless",
      "tag": "vless-out",
      "server": "{{address}}",
      "server_port": {{port}},
      "uuid": "{{id}}",
      "packet_encoding": "xudp",
      "tls": {
        "enabled": true,
        "server_name": "{{sni}}",
        "utls": {
          "enabled": true,
          "fingerprint": "{{fp}}"
        },
        "reality": {
          "enabled": true,
          "public_key": "{{pbk}}",
          "short_id": "{{sid}}"
        }
      }
    }
  ],
  "route": {
    "auto_detect_interface": true,
    "final": "vless-out"
  }
}
